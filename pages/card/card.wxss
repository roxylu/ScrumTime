.card {
  width: 70%;
  height: 750rpx;
  text-align: center;
  border-radius: 8rpx;
  box-shadow: 0 8rpx 16px rgba(0,0,0,0.15);
  margin-top: 80rpx;
}

.card__label {
  margin-top: 200rpx;
  display: block;
  text-align: center;
  font-weight: bold;
  color: #000000;
  font-size: 200rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.userinfo-avatar {
  margin-top: 200rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}