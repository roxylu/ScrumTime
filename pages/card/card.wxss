.card {
  width: 70%;
  height: 750rpx;
  text-align: center;
  border-radius: 8rpx;
  box-shadow: 0 8rpx 16px rgba(0,0,0,0.15);
}

.card__label {
  margin-top: 200rpx;
  display: block;
  text-align: center;
  font-weight: bold;
  color: #000000;
  font-size: 200rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}